{
  "name": "orangehrm_automation",
  "version": "1.0.0",
  "description": "Playwright + Cucumber + TypeScript OrangeHRM Automation",
  "main": "index.js",
  "scripts": {
    "test": "cucumber-js src/features/**/*.feature --require-module ts-node/register --require src/steps/**/*.ts --require src/hooks/hooks.ts --format allure-cucumberjs/reporter",
    "allure:generate": "allure generate allure-results --clean -o allure-report",
    "allure:open": "allure open allure-report"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@cucumber/cucumber": "^11.3.0",
    "@playwright/test": "^1.57.0",
    "allure-commandline": "^2.36.0",
    "allure-cucumberjs": "^3.4.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "playwright": "^1.57.0",
    "playwright-core": "^1.57.0"
  }
}